<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          app:cardCornerRadius="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="20dp"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/imgTacGia"
              android:layout_width="110dp"
              android:layout_height="150dp"
              android:scaleType="centerCrop" />
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/txt_tenTacGia"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ten phim"
          android:textStyle="bold"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="150dp"
          android:textColor="#FF0000"
          android:textSize="25sp" />
      <TextView
          android:id="@+id/txt_moTa"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ten dien vien"
          android:textStyle="bold"
          android:layout_marginTop="70dp"
          android:layout_marginLeft="150dp"
          android:textColor="#FF0000"
          android:textSize="15sp" />



      <TextView
          android:id="@+id/txt_quocGia"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="150dp"
          android:layout_marginTop="120dp"
          android:text="Viet Nam"
          android:textColor="#FF0000"
          android:textSize="15sp" />

      <TextView
          android:id="@+id/txt_soSao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:text="4.3 Sao"
          android:layout_marginTop="120dp"
          android:layout_marginEnd="63dp"
          android:textColor="#FF0000" />
  </RelativeLayout>
</RelativeLayout>
