<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"  android:background="#C9000000" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" tools:context=".ActivityReview">
    <TextView android:layout_width="wrap_content" android:textStyle="bold" android:textColor="#F3CA08" android:layout_height="wrap_content" android:text="Đánh giá ứng dụng của chúng tôi" android:textSize="25sp"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/star1" android:layout_width="50dp" android:src="@drawable/star2" android:layout_height="50dp"/>
            <ImageView android:id="@+id/star2" android:layout_width="50dp" android:src="@drawable/star2" android:layout_height="50dp"/>
            <ImageView android:id="@+id/star3" android:layout_width="50dp" android:src="@drawable/star2" android:layout_height="50dp"/>
            <ImageView android:id="@+id/star4" android:layout_width="50dp" android:src="@drawable/star2" android:layout_height="50dp"/>
            <ImageView android:id="@+id/star5" android:layout_width="50dp" android:src="@drawable/star2" android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/starof1" android:layout_width="50dp" android:src="@drawable/starmenu" android:layout_height="50dp"/>
            <ImageView android:id="@+id/starof2" android:layout_width="50dp" android:src="@drawable/starmenu" android:layout_height="50dp"/>
            <ImageView android:id="@+id/starof3" android:layout_width="50dp" android:src="@drawable/starmenu" android:layout_height="50dp"/>
            <ImageView android:id="@+id/starof4" android:layout_width="50dp" android:src="@drawable/starmenu" android:layout_height="50dp"/>
            <ImageView android:id="@+id/starof5" android:layout_width="50dp" android:src="@drawable/starmenu" android:layout_height="50dp"/>
        </LinearLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_danhGia" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Danh gia" android:textColor="#000000" android:backgroundTint="@color/teal_200"/>
</LinearLayout>