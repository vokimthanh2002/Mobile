<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".ActivitySignIn">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/kttv"/>
    <EditText
        android:id="@+id/edtUserName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:layout_height="45dp"
        android:background="@drawable/round_bg"
        android:drawableStart="@drawable/person"
        android:textColorHint="@color/white"
        android:hint="Nhập tài khoản"
        android:padding="10dp"
        android:drawablePadding="16dp"
        android:inputType="textPersonName"
      />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtPassword"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="45dp"
            android:background="@drawable/round_bg"
            android:drawableStart="@drawable/lock"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            />
        <ImageButton
            android:id="@+id/imgMat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="330dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
          />
        <ImageButton
            android:id="@+id/imgNhamMat"
            android:layout_width="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="330dp"
            android:layout_height="25dp"
            android:background="@null"
            android:src="@drawable/nhammat"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhớ mật khẩu"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:textAllCaps="false"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/round_border"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu? "
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="145dp"
        android:textSize="18sp"
        android:textStyle="italic"
     />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Hoặc"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
      />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgfblogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook_48px"/>

        <ImageView
            android:id="@+id/imggmaillogin"
            android:layout_width="50dp"
            android:layout_marginLeft="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icons8_google_48px" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gotoSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="60dp"
            android:text="Bạn chưa có tài khoản? "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
          />

        <Button
            android:id="@+id/btnSignIn_SignUp"
            android:layout_toRightOf="@+id/gotoSignIn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginStart="32dp"

            android:text="Đăng kí"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"

           />
    </RelativeLayout>




</LinearLayout>